<body class="cbp-spmenu-push">

    
    <!-- banner -->
    <div class="banner">
        <!-- header -->
        <div class="w3ls-header">
            <div class="container">
                <div class="agile-logo">
                    <h1><a href="/">GamersMed Pharmacy</a></h1>
                </div>
                <div class="top-nav">

                    <nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-right" id="cbp-spmenu-s2">
                        <h3>Menu</h3>
                        @Html.ActionLink("Home", "Index", "Home")
                        @Html.ActionLink("About Us", "About", "Home")
                        @Html.ActionLink("Contact Us", "Contact", "Home")
                        @Html.ActionLink("Medications", "Medications", "Home")
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Subscription Status", "Index", "Prescription")</li>
                                @if (User.IsInRole(SD.DoctorRole))
                                {
                                    @Html.Partial("_AdminMenuPartial")
                                }
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </nav>
                    <div class="main buttonset">
                        <!-- Class "cbp-spmenu-open" gets applied to menu and "cbp-spmenu-push-toleft" or "cbp-spmenu-push-toright" to the body -->
                        <button id="showRightPush"><img src="~/Template/images/menu-icon.png" alt="" /></button>
                        <!-- <span class="menu"></span> -->
                    </div>
                    <!-- script-for-drop down -->
                    <script>
                        $("a.menu-icon").click(function () {
                            $("ul.nav1").slideToggle(300, function () {
                                // Animation complete.
                            });
                        });
                    </script>
                    <!-- //script-for-dropdown -->

                    <script src="~/Template/js/classie.js"></script>
                    <script>
                        var menuRight = document.getElementById('cbp-spmenu-s2'),
                            showRightPush = document.getElementById('showRightPush'),
                            body = document.body;

                        showRightPush.onclick = function () {
                            classie.toggle(this, 'active');
                            classie.toggle(body, 'cbp-spmenu-push-toleft');
                            classie.toggle(menuRight, 'cbp-spmenu-open');
                            disableOther('showRightPush');
                        };

                        function disableOther(button) {
                            if (button !== 'showRightPush') {
                                classie.toggle(showRightPush, 'disabled');
                            }
                        }
                    </script>
                    <!-- /script-for-menu -->
                </div>
            </div>
        </div>
        <!-- //header -->
        <div class="banner-text">
            <h3>WELCOME TO GAMERSMED PHARMACY</h3>
            <h4>We offer free shiping and delivery upon approval of prescription. In the event that you are unable to fetch your medication at the pharmacy physically please contact us using the information below. Anywhere in South Africa.</h4>
            <br /><h4>Contact Us</h4>
            <h5><i class="fa fa-phone" aria-hidden="true"></i> <span>+27 31 234 5678</span></h5>
            <h5><i class="fa fa-envelope-o" aria-hidden="true"></i> <a class="email-link" href="mailto:example@mail.com">gamersmed@mail.com</a></h5>

        </div>
    </div>
    <!-- //banner -->
