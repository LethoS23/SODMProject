        <form action="/action_page.php" class="chat-form-container">
            <iframe src="https://webchat.botframework.com/embed/Canni-Bot?s=Wf50KmnCgEg._o6PN8ZV5iq94ZpGLDQB3MfXBbNoo9Hdm4LQbIkiR8o"
                    style="height: 502px; max-height: 502px; width: 280px;"></iframe>

            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
