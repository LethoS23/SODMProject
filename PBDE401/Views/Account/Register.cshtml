@model PBDE401.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<center>
    <br />
    <h1>Create A New Account</h1>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @*<h4>Create a new account.</h4>*@
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @*@Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })*@
            <div>
                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })*@
            <div>
                @Html.TextBoxFor(m => m.Surname, new { placeholder = "Surname", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })*@
            <div>
                @Html.TextBoxFor(m => m.Phone, new { placeholder = "Phone", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.BirthDate, new { @class = "col-md-2 control-label" })*@
            <div>
                @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
            <div>
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
            <div>
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.MembershipTypeId, "Membership Type", htmlAttributes: new { @class = "col-md-2 control-label" })*@
            <div>
                @Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes, "id", "name"), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-sm btn-primary" value="Register" />
            </div>
        </div>
    }
</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
